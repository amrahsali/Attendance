<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_viewHolder"
        android:layout_width="match_parent"
        app:cardMaxElevation="10dp"
        android:elevation="50dp"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardPreventCornerOverlap="true"
        android:layout_height="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="6dp"
                android:layout_height="match_parent">

        <ImageView
            android:id="@+id/student_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/person_foreground"/>

            </androidx.cardview.widget.CardView>



            <RelativeLayout
                android:paddingStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="amrah"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/student_faculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="computing"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/student_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="software "
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/student_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="swe123 "
                        android:textSize="12dp"/>

                    <TextView
                            android:id="@+id/student_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="100 "
                            android:textSize="12dp"/>
                    </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>