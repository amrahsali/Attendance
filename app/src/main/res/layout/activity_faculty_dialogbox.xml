<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".FacultyModule.Faculty_dialogbox_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Update Faculty"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Faculty Name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/faculty_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boarder_bg"
        android:hint="faculty name"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Department Names"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/department_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/department_named_dbox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boarder_bg"
            android:hint="department name"
            android:paddingStart="5dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/add_department_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Add"
            android:textColor="@color/white"
            android:background="@drawable/ic_add" />

        <LinearLayout
            android:id="@+id/department_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Department items will be dynamically added here -->

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add_faculty_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:gravity="center"
            android:text="cancel"
            android:textColor="@color/white" />
        <View
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/add_faculty_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>
