<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="5dp"
    tools:context=".FacultyModule.Faculty_dialogbox_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Update Faculty"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Faculty Name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/faculty_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boarder_bg"
            android:hint="faculty name"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="textCapWords"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingStart="5dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Department Names"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/department_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/department_named_dbox"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:background="@drawable/boarder_bg"
                android:hint="department name"
                android:paddingStart="5dp"
                android:lines="1"
                android:inputType="textCapWords"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/add_department_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"

                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:backgroundTint="@color/blue"
                android:background="@drawable/baseline_add_box_24"/>

        </LinearLayout>

        <LinearLayout
            android:padding="12dp"
            android:id="@+id/department_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Department items will be dynamically added here -->
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_faculty_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/blue" />
            <View
                android:layout_width="40dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/add_faculty_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/blue" />
        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
